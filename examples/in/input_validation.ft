import forst (
  "trpc"
)

type PhoneNumber =
  String.Min(3).Max(10) & (
    | (String.StartsWith("+"))
    | (String.StartsWith("0"))
  )

fn createUser(input: Trpc::Arg.Input({
  id: UUID.V4,
  name: String.Min(3).Max(10),
  phoneNumbers: Array(PhoneNumber),
  bankAccount: {
    iban: String.Min(10).Max(34),
  },
})) {
  puts "Creating user with id: #{input.id}"
  300.3f
}

const x = createUser(input: {
  id: 'abcdef-abc1234-abc1234-abc1234',
  name: "Joe",
  phoneNumbers: ["+491241234132"],
  bankAccount: {
    iban: "DE12345678901234567890",
  },
})
x # Float32

# trpc mutation: createUser

export userRouter = Trpc::Router(routes: {
  createUser
})